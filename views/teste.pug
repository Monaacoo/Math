doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Teste
  // Link To CSS
  link(rel="stylesheet", href="stylee.css")
  // Link Swiper CSS
  link(rel='stylesheet' href='swiper-bundle.min.css')
  // Fav Icon
  link(rel='shortcut icon' href='img/fav-icon.png' type='image/x-icon')
  // Box Icon
  link(href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet')
// Header
header
  // Nav
  .nav.container
    // Logo
    a.logo(href='index.html')
      img#aprensi-logo(src='img/aprensi_logo.png' alt='')
    // Searc Box
    .search-box
      input#search-input(type='search' name='' placeholder='Pesquisar')
      i.bx.bx-search
    a.user(href='/perfil')
      i.bx.bx-user
      h1 MEU PERFIL
// Home
section#home.home.container
  // Home Image
  img.home-img(src='img/img.geografia.jpg' alt='')
  // Home Text
  .home-text
    h1.home-title
      | Guerra Fria 
      br
      | Hist&oacute;ria
    p 1947-1991
    a.watch-btn(href='#')
      i.bx.bx-right-arrow
      span Assista ao v&iacute;deo
// Home End
// Popular Section Start
a.poste(href="/postagem")
  i.bx.bx-plus
section#popular.popular.container
  // Heading
  .heading
    h2.heading-title V&iacute;deos Populares
    // Swiper Buttons
    .swiper-btn
      .swiper-button-prev
      .swiper-button-next
  // Content
  .popular-content.swiper
    .swiper-wrapper
      // Movies Box 1
      .swiper-slide
        .movie-box
            div(class="campo")

            each resultado in resultados

                div(class="postagem")
                    div(class="postagem-nome") #{resultado.autor}
                    div(class="postagem-descricao") #{resultado.descricao}
                    div(class="postagem-conteudo")
                        img(src=resultado.imagem, alt="conteudo")
                    div(class="deletar")
                        a(href=`/deletar/${resultado.codigo}`) Deletar
                    a.watch-btn.play-btn(href='#')
                    i.bx.bx-right-arrow
// Popular Section End
// Link Swiper JS
script(src='swiper-bundle.min.js')
// Link To JS
script(src='main.js')